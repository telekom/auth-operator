{
    // Use IntelliSense to learn about possible attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Auth Operator for AuthProvider CR",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "controller",
                "--leader-elect=false",
                "--namespace=default",
                "--verbosity=2",
                "--enable-authprovider-reconciler=true",
                "--enable-binddefinition-reconciler=false",
                "--enable-roledefinition-reconciler=false",
                "--auth-provider-requeue-interval=5m",
            ],
            "env": {
                "KUBECONFIG": "",
                "API_TOKEN": "",
                "IDP_URL": "portal.security.in.pan-net.eu:443",
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}